modules = ["c-clang14", "cpp-clang14", "python-3.10", "python-3.12", "web"]

build = "python3 -m pip install -r requirements.txt"
run = "FLASK_APP=app.py FLASK_RUN_PORT=5050 python3 -m flask run"

